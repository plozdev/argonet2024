<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E5DE"
    tools:context=".ResultActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_result"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:layout_marginTop="25dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num1"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/main"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/listImage1"
                        android:src="@drawable/tao"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/num1"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:id="@+id/listName1"
                        android:text="Name"
                        android:textColor="@color/main"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/listImage1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/listPercent1"
                        android:layout_toEndOf="@id/listName1"
                        android:layout_centerVertical="true"
                        android:text="10.02%"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/moreInfo1"
                        android:background="@drawable/next_icon"
                        app:backgroundTint="@null"
                        android:layout_toEndOf="@id/listName1"
                        android:layout_marginStart="65dp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num2"
                        android:text="2"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/main"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/listImage2"
                        android:src="@drawable/tao"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/num2"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:id="@+id/listName2"
                        android:text="Name"
                        android:textColor="@color/main"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/listImage2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/listPercent2"
                        android:layout_toEndOf="@id/listName2"
                        android:layout_centerVertical="true"
                        android:text="10.02%"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/moreInfo2"
                        android:background="@drawable/next_icon"
                        app:backgroundTint="@null"
                        android:layout_toEndOf="@id/listName2"
                        android:layout_marginStart="65dp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num3"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/main"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/listImage3"
                        android:src="@drawable/tao"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/num3"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:id="@+id/listName3"
                        android:text="Name"
                        android:textColor="@color/main"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/listImage3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/listPercent3"
                        android:layout_toEndOf="@id/listName3"
                        android:layout_centerVertical="true"
                        android:text="10.02%"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/moreInfo3"
                        android:background="@drawable/next_icon"
                        app:backgroundTint="@null"
                        android:layout_toEndOf="@id/listName3"
                        android:layout_marginStart="65dp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num4"
                        android:text="4"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/main"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/listImage4"
                        android:src="@drawable/tao"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/num4"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:id="@+id/listName4"
                        android:text="Name"
                        android:textColor="@color/main"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/listImage4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/listPercent4"
                        android:layout_toEndOf="@id/listName4"
                        android:layout_centerVertical="true"
                        android:text="10.02%"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/moreInfo4"
                        android:background="@drawable/next_icon"
                        app:backgroundTint="@null"
                        android:layout_toEndOf="@id/listName4"
                        android:layout_marginStart="65dp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:src="@drawable/fab_save"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_cancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:src="@drawable/fab_cancel"
        android:backgroundTint="@color/red_error"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_save"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        app:icon="@drawable/fab_save"
        android:text="Lưu dữ liệu"
        android:visibility="invisible"/>


</RelativeLayout>