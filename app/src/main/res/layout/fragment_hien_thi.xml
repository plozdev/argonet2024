<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2E5DE"
    tools:context=".fragment_home.HienThiFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/temp1"
                android:layout_marginTop="76dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textSize="19sp"
                android:text="Nhiệt độ:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/temp"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:hint="°C"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/edittext_custom"
                android:gravity="center"
                android:layout_toRightOf="@+id/temp1"
                />

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/humid1"
                android:layout_marginTop="149dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textSize="18sp"
                android:text="Độ ẩm:"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/humid"
                android:layout_below="@+id/temp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="%"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/edittext_custom"
                android:gravity="center"
                android:layout_toRightOf="@id/humid1"/>

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/rainfall1"
                android:layout_marginTop="218dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textSize="18sp"
                android:text="Lượng mưa:"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/rainfall"
                android:layout_below="@+id/humid"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="mm"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/edittext_custom"
                android:gravity="center"
                android:layout_toRightOf="@id/rainfall1"/>

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/ph1"
                android:layout_marginTop="290dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textSize="18sp"
                android:text="Độ pH:"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/ph"
                android:layout_below="@+id/rainfall"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/edittext_custom"
                android:gravity="center"
                android:layout_toRightOf="@id/ph1"/>
            <Button
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:id="@+id/reloadButton"
                android:text="THỬ LẠI"
                android:textColor="@color/sub"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ph"
                android:layout_marginTop="85dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        

</RelativeLayout>